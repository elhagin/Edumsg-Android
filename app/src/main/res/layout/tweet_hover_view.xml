<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp">

        <CheckBox
            android:id="@+id/retweet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:button="@drawable/retweet_btn_selector"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/reply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_reply_24dp"
            android:layout_toRightOf="@id/retweet_button"
            android:background="@null"/>

        <CheckBox
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reply_button"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:button="@drawable/fav_btn_selector"/>

        <ImageButton
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:layout_toRightOf="@id/favorite_button"
            android:layout_marginBottom="10dp"
            android:background="@null"/>

    </RelativeLayout>


</RelativeLayout>